<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookaholic.userApp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:name=".AppApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewProduct.ProductShowingActivity"
            android:exported="true"/>
        <activity android:name=".Activity.CheckOutActivity"
            />

        <activity android:name=".MainPage.BrowseProductsActivity"/>

        <activity android:name=".Onboarding.UserAboarding.PhoneActivity"
            android:exported="true"/>
        <activity android:name=".Onboarding.UserWelcomeActivity"
            android:exported="true"/>
        <activity android:name=".Activity.OrderPlacedActivity"/>
        <activity android:name=".Activity.ExamDetailActivity"/>
    </application>



</manifest>