<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:padding="4dp"


    android:layout_width="@dimen/h_i_w"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/h_p_item_image"
        fresco:placeholderImage="@drawable/ic_shopping_cart"
        fresco:failureImage="@drawable/ic_player"

        android:layout_height="@dimen/h_i_im_h"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <com.bookaholic.userApp.UI.WhitenyBooksFont
        android:layout_width="wrap_content"
        android:text="Book name"
        android:layout_below="@id/h_p_item_image"
        android:id="@+id/h_p_item_name"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/h_i_ts"
        android:textColor="@color/material_grey100"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp" />


    <com.bookaholic.userApp.UI.OpenSansTextView
        android:layout_width="wrap_content"
        android:id="@+id/h_p_item_price_text"
        android:text="35/2 Weeks"
        android:textSize="8sp"

        android:textColor="@color/material_grey400"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@id/h_p_item_name"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_p_item_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/h_p_item_price_text"
        app:srcCompat  = "@drawable/ic_shopping_cart"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/h_p_item_price_text" />

</RelativeLayout>