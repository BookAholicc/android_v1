<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp"
    android:paddingRight="4dp"


    android:layout_marginRight="8dp"
    android:layout_width="125dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        app:srcCompat = "@mipmap/ic_launcher"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/h_p_item_image"
        android:layout_height="160dp"
        android:layout_alignEnd="@+id/h_p_item_name"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/h_p_item_name"
        android:layout_alignParentLeft="true" />
    <com.bookaholic.userApp.UI.WhitenyBooksFont
        android:layout_width="wrap_content"
        android:text="Book name"
        android:layout_below="@id/h_p_item_image"
        android:id="@+id/h_p_item_name"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/my_black"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp" />


    <com.bookaholic.userApp.UI.OpenSansTextView
        android:layout_width="wrap_content"
        android:id="@+id/h_p_item_price_text"
        android:text="35/2 Weeks"
        android:textSize="10sp"

        android:textColor="@color/material_black"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@id/h_p_item_name"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_p_item_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/h_p_item_price_text"
        app:srcCompat  = "@drawable/ic_shopping_cart"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/h_p_item_price_text" />

</RelativeLayout>