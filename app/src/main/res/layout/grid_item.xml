<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_height="@dimen/image_height"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/grid_image"
        android:background="@mipmap/fifa"
        fresco:placeholderImage="@drawable/ic_shopping_cart"
        fresco:failureImage="@drawable/ic_player"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <com.bookaholic.userApp.UI.WhitenyBooksFont
        android:layout_width="match_parent"
        android:textColor="@color/material_grey100"
        android:textSize="12sp"
        android:maxLines="2"

        android:gravity="center"
        android:id="@+id/grid_name"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="To kill A Mocking Bird sfkjasklfdjlsa "
        android:layout_below="@id/grid_image"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/grid_name"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_shopping_cart"
            android:id="@+id/wish_item"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_shopping_cart"
            android:id="@+id/cart_item"
            android:layout_height="30dp" />
    </LinearLayout>

</RelativeLayout>