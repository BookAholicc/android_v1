<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bookaholic.userApp.UI.WhitenyBooksFont
        android:layout_width="match_parent"
        android:text="Your Books are on the way!"
        android:gravity="center"
        android:textColor="@color/material_white"
        android:layout_marginTop="20dp"
        android:id="@+id/op_title_text"
        android:textSize="22sp"
        android:layout_height="wrap_content" />
    <com.bookaholic.userApp.UI.OpenSansTextView
        android:layout_width="wrap_content"
        android:text="Status :"
        android:textColor="@color/material_redA400"
        android:id="@+id/status_text"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/stat_val"
        android:layout_alignBottom="@+id/stat_val"
        android:layout_alignLeft="@+id/op_pcount_text"
        android:layout_alignStart="@+id/op_pcount_text"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp" />
    <com.bookaholic.userApp.UI.OpenSansTextView
        android:layout_width="wrap_content"
        android:text="Order Receieved"
        android:id="@+id/stat_val"
        android:textColor="@color/material_white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/op_title_text"
        android:layout_toRightOf="@+id/status_text"
        android:layout_toEndOf="@+id/status_text"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:text="#343448"
        android:id="@+id/ord_no"
        android:gravity="center"
        android:layout_below="@+id/stat_val"
        android:textColor="@color/material_white"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="100dp"
        app:srcCompat = "@drawable/ic_player"
        android:layout_height="100dp"
        android:id="@+id/op_image"
        android:layout_below="@+id/ord_no"
        android:layout_centerHorizontal="true"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/op_image"
        android:id="@+id/books_card"
        app:cardBackgroundColor="@color/material_grey500"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"

                android:layout_height="100dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fifa"
                    android:layout_height="match_parent" />


            </LinearLayout>


    </android.support.v7.widget.CardView>

   <TextView
       android:layout_width="match_parent"
       android:text="Explore more"

       android:gravity="center"
       android:textSize="22sp"
       android:textAppearance="@style/TextAppearance.AppCompat.Title"
       android:textColor="@color/material_redA400"
       android:layout_marginTop="40dp"
       android:layout_below="@id/books_card"
       android:layout_height="wrap_content" />



</RelativeLayout>