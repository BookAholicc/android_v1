<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_height="wrap_content"
    android:layout_width="@dimen/image_height"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_height="@dimen/image_height"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/e_i_image"
        fresco:placeholderImage="@drawable/ic_shopping_cart"
        fresco:failureImage="@drawable/ic_player"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <com.bookaholic.userApp.UI.WhitenyBooksFont
        android:layout_width="match_parent"
        android:textColor="@color/material_white"
        android:textSize="16sp"
        android:maxLines="2"

        android:gravity="center"
        android:id="@+id/e_i_pname"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="To kill A Mocking Bird this "
        android:layout_below="@id/e_i_image"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <com.bookaholic.userApp.UI.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/e_i_pname"
        android:gravity="left"
        android:text="35"

        android:textColor="@color/material_grey500"
        android:id="@+id/e_i_price"
        android:paddingLeft="4dp"
        android:layout_marginBottom="2dp"

        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/e_i_price"
        app:srcCompat="@drawable/ic_shopping_cart"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/e_i_price"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>